<div class="container">

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <%= image_tag(@history.picture_url, style: "max-width: 100%; border-radius: 10px;") if @history.picture? %>
        </div>
        <div class="col-md-2"></div>
      </div>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <h1><%= @history.title %></h1>
          <h4><%= @history.user.username %></h4>
          <small><%= time_ago_in_words(@history.created_at) %> ago</small>
          <p><%= @history.content %></p>
        </div>
        <div class="col-md-2"></div>
      </div>

      <hr>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <p><%= @history.content %></p>
        </div>
        <div class="col-md-2"></div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-8"></div>
        <div class="col-md-2">
          <p><%= link_to 'Editar', edit_history_path(@history), class: "btn btn-warning btn-sm" %>
              <%= link_to 'Volver', histories_path, class: "btn btn-info btn-sm" %></p>
              <%= link_to 'Eliminar', @history, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
        <div class="col-md-2"></div>
      </div>

</div>
